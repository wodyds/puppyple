<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Unchecked -->
<item android:state_checked="false">
    <shape>
        <stroke android:width="1dp" android:color="#E6C5C5C5" />
        <corners android:radius="4dp" />
        <solid android:color="#fff" />
    </shape>
</item>
<!-- Checked -->
<item android:state_checked="true">
    <layer-list>
        <!-- 배경 -->
        <item>
            <shape>
                <corners android:radius="4dp" />
                <!--<solid android:color="#731aed" />-->
                <gradient
                    android:angle="90"
                    android:endColor="#7929e8"
                    android:startColor="#5e11e3" />
            </shape>
        </item>
        <!-- 이미지 영역 -->
        <item
            android:drawable="@drawable/check"
            android:top="4dp"
            android:right="4dp"
            android:bottom="4dp"
            android:left="4dp" />
    </layer-list>
</item>
</selector>


